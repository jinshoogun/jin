<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
   "-//Apache Softward Foundation//DTD Struts Configuration 2.0// EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.multipart.saveDir" value="/tmp" />
	<package name="test" extends="struts-default">
		<interceptors>
			<interceptor name="test" class="test.interceptor.TestInterceptor" />
		</interceptors> <!-- interceptor is do first Action tag! -->
		<action name="hello" class="test.action.HelloAction"> <!-- HelloAction.java line 5 included -->
			<!--http://localhost:8080/struts/hello(=name).action -->
			<!-- success return -> result -->
			<!-- <interceptor-ref name="params"></interceptor-ref> parameter is input 
				interceptor(Now is skipped) -->
			<interceptor-ref name="fileUpload" />
			<interceptor-ref name="params" />
			<result>/12_14/hello.jsp</result>
			<!-- HelloAction.java line 8 included -->
		</action>
	</package>
	<package name="strut2" extends="struts-default">
		<interceptors>
			<interceptor name="user" class="test.interceptor.TestInterceptor" />
		</interceptors>
		<action name="user" class="login.action.UserAction3">
			<interceptor-ref name="prepare" />
			<interceptor-ref name="modelDriven" />
			<interceptor-ref name="params" />
			<result>/save_ok.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
	</package>
	<package name="strut3" extends="struts-default">
		<interceptors>
			<interceptor name="mytimer" class="interceptor.Timer"></interceptor>
		</interceptors>
		<action name="add" class="interceptor1.SumAction">
			<interceptor-ref name="mytimer"></interceptor-ref>
			<interceptor-ref name="prepare"></interceptor-ref>
			<interceptor-ref name="modelDriven"></interceptor-ref>
			<interceptor-ref name="params"></interceptor-ref>
			<result>/result.jsp</result>
		</action>
	</package>
	<package name="struts4" extends="struts-default">
		<action name="login" class="login.action.LoginAction">
			<interceptor-ref name="prepare" />
			<interceptor-ref name="modelDriven" />
			<interceptor-ref name="params" />
			<result>/login/login_ok.jsp</result>
			<result name="login">/login/login.jsp</result>
		</action>
	</package>
	<package name="struts5" extends="struts-default">
		<interceptors>
			<interceptor name="loginDao" class="login2.interceptor.LoginDAOInterceptor"></interceptor>
		</interceptors>
		<action name="login" class="login2.action.LoginAction">
			<interceptor-ref name="prepare"></interceptor-ref>
			<interceptor-ref name="modelDriven"></interceptor-ref>
			<interceptor-ref name="params"></interceptor-ref>
			<interceptor-ref name="loginDao"></interceptor-ref>
			<result>/login2/login_ok.jsp</result>
			<result name="login">/login2/login.jsp</result>
		</action>
	</package>
</struts>